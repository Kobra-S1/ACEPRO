+            "ace_instances",
+            "current_index",
+            "endless_spool_enabled",
+            "endless_spool_match_mode",
+        ]
+        for instance_id in instances:
+            key = f"ace_instance_{instance_id}"
+            objects[key] = ace_fields
+
+        logging.debug(
+            "ACE subscription enabled for: %s",
+            ", ".join(sorted(objects.keys())),
+        )
+        return objects
+
+    def _detect_ace_instances_from_config(self):
+        printer = getattr(self, "printer", None)
+        if printer is None:
+            return []
+
+        instances = set()
+        try:
+            get_section = getattr(printer, "get_config_section", None)
+            if callable(get_section):
+                ace_section = get_section("ace")
+                if isinstance(ace_section, dict):
+                    ace_count = ace_section.get("ace_count")
+                    if ace_count is not None:
+                        try:
+                            return list(range(int(ace_count)))
+                        except (ValueError, TypeError):
+                            logging.debug(
+                                "ACE: Unable to parse ace_count='%s'",
+                                ace_count,
+                            )
+
+            get_sections = getattr(printer, "get_config_section_list", None)
+            if callable(get_sections):
+                for section in get_sections():
+                    if section == "ace":
+                        instances.add(0)
+                    elif section.startswith("ace "):
+                        try:
+                            instances.add(int(section.split()[1]))
+                        except (ValueError, IndexError):
+                            logging.debug(
+                                "ACE: Unable to parse instance number from section '%s'",
+                                section,
+                            )
+        except Exception:
+            logging.debug(
+                "ACE: Failed to detect ACE instances from config",
+                exc_info=True,
+            )
+
+        return sorted(instances)
