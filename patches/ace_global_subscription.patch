+    def _ace_subscription_objects(self):
+        objects = {}
+        instances = self._detect_ace_instances_from_config()
+        if not instances:
+            return objects
+
+        ace_fields = [
+            "slots",
+            "status",
+            "dryer",
+            "dryer_status",
+            "temp",
+            "enable_rfid",
+            "fan_speed",
+            "feed_assist_count",
+            "cont_assist_time",
